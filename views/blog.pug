doctype html
html
  include transition.pug
  head
    include lib.pug
    body(class="bg-dark")
      nav.navbar.navbar-expand-lg.navbar-dark.bg-transparent
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item.active.magic-hover.magic-hover__square
              a.nav-link(href='#') Blog
                span.sr-only (current)
            li.nav-item.magic-hover.magic-hover__square
              a.nav-link.fade_out(data-url="/") Home 
      br
      h1.text-white.display-5.ml-5.float-left#name K
        span#onhover udos Beluga
      br
      br
      br
      br 
      .overflow-auto.position-absolute.overflow-scroll(style="height:75vh")
        .float-left.h-50.bg-transparent.ml-4.position-relative.cs-width
          each val in results
            a.fade_out(data-url="/posts/"+val.title) 
              img.float-right.magic-hover.magic-hover__square(src=val.imageUrl)   
            .text.ml-3
              h4
                a.underline.fade_out(data-url="/posts/"+val.title)  #{val.title}
              p.text-secondary #{val.description}...&nbsp;&nbsp;
                a.underline.fade_out(data-url="/posts/"+val.title)  More
                br
                br
                br
          br
          br
      i.arrow.ml-3
